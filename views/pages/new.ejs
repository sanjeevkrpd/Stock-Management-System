<% layout('layouts/boilerplate.ejs') -%> <br /><br />

<body>
  <h1 class="offset-2">Add A New Product</h1>
  <div class="row">
    <div class="col-8 offset-2 mb-5 newpage">
      <form
        method="POST"
        action="/api/v1/stock/add"
        class="needs-validation"
        novalidate
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="title"
            class="form-control"
            id="title"
            name="stock[title]"
            placeholder="Add a catcy title"
            required
          />
          <div class="mb-3">
            <label for="title" class="form-label">Company</label>
            <input
              type="title"
              class="form-control"
              id="title"
              name="stock[company]"
              placeholder="Add a catcy title"
              required
            />
          <div class="valid-feedback">title looks good</div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            rows="4"
            class="form-control"
            id="description"
            name="stock[description]"
            required
          ></textarea>
          <div class="invalid-feedback">description should be valid</div>
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              class="form-control"
              id="price"
              name="stock[currentPrice]"
              placeholder="1000"
              required
            />
            <div class="invalid-feedback">Price should be valid</div>
          </div>
          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Quantity</label>
            <input
              type="text"
              class="form-control"
              name="stock[quantity]"
              id="country"
              placeholder="1"
              required
            />
            <div class="invalid-feedback">Country name should be valid</div>
          </div>
        </div>
        <button type="submit" class="btn btn-primary add-btn">Add</button>
      </form>
    </div>
  </div>
</body>
